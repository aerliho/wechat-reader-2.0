/* post-detail.wxss */

.postDetailContainer {
  display: flex;
  flex-direction: column;
}

.headImg {
  width: 100%;
  height: 460rpx;
}
.audio{
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  top: 380rpx;
  right: 30rpx;
  opacity: 0.6;
}
.authorContainer {
  flex-direction: row;
  margin: 20rpx 0 0 30rpx;
}

.authorContainer image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.authorContainer text {
  vertical-align: middle;
  font-weight: 300;
  color: #666;
  font-size: 25rpx;
}

.authorContainer .authorName {
  font-size: 30rpx;
  margin: 0 20rpx;
}

.authorContainer .postTime {
  margin: 0 20rpx;
}

.title{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
  margin: 30rpx 0 0 40rpx;
}

.tool{
  margin: 10rpx 0;
  padding-right: 20rpx;
}
.tool image{
  width: 64rpx;
  height: 64rpx;
  float: right;
  margin-left: 30rpx;
}
.detailArtical{
  padding: 0;
  margin:  20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  color: #666;

}
