.postItemContainer{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background-color: #FFF;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.postAuthorDate{
  margin: 10rpx 0 20rpx 20rpx;  
}
.postAuthor{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.postDate{
  margin-left: 20rpx;
  margin-bottom: 5px;
  vertical-align: middle;
  font-size: 26rpx;
}
.postTitle{
  font-size: 34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.postImg{
  margin: 0 auto;
  width: 100%;
  height: 340rpx;
}
.postContent{
  color: #666;
  line-height: 40rpx;
  margin: 10rpx 10rpx;
  font-size: 28rpx;
  text-indent: 1em;
}
.postLike{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.postLikeIcon{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.postLikeNum{
  vertical-align: middle;
  margin-right: 8px;
}